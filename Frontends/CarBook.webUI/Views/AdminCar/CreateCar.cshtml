@model ResultCreateCarDto
@{
    ViewData["Title"] = "CreateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-xl-12">
   
                    <div class="card">
                        <div class="card-body">

                            <h4 class="card-title">Yeni Araç Girişi</h4>
                            <p class="card-subtitle mb-4">Araç ile ilgili Temel Bilgileri Eksiksiz Doldurmanız önemlidir.Veri girişlerinden sonra kaydet Butona tıklayarak işlemi tamamlayabilirsiniz. </p>

                            <form method="post">
                                <div class="form-group">
                                    <label for="exampleInputBrand">Marka</label>
                            @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.brandValues,new {@class="form-control"})
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputModel">Model</label>
                            <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Model girişi Yapınız">
                                </div>
                        <div class="form-group">
                            <label for="exampleInputCoverImage">Kapak Fotografı</label>
                            <input type="text" class="form-control" id="exampleInputCoverImage" asp-for="CoverImageUrl" placeholder="Kapak Fotograf Linki Giriniz">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputKm">Km</label>
                            <input type="text" class="form-control" id="exampleInputKm" asp-for="Km"  placeholder="Km Bilgisi Giriniz">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputTransmission">Vites Türü</label>
                            <input type="text" class="form-control" id="exampleInputTransmission" asp-for="Transmission" placeholder="Vites Türünü yazınız">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputSeat">Koltuk Sayısı</label>
                            <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seats" placeholder="Koltuk Sayısını seçiniz">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputLugage">Bagaj sayısı</label>
                            <input type="number" class="form-control" id="exampleInputLugage" asp-for="Luggage" placeholder="Bagaj Sayısını seçiniz">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFuel">Yakıt Türü</label>
                            <input type="text" class="form-control" id="exampleInputFuel" asp-for="Fuel" placeholder="Yakıt Türünü seçiniz">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputBigImage">Büyük Kapak Fotografı</label>
                            <input type="text" class="form-control" id="exampleInputBigImage" asp-for="BigImageUrl" placeholder="Araç Detayında gözükecek Kapak Fotograf Link">
                        </div>
                                <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                            </form>

                        </div> <!-- end card-body-->
                    </div>

                </div>
                <!-- end card-body-->
            </div>
            <!-- end card -->

        </div>
        <!-- end col -->


 
    <!-- end page title -->



