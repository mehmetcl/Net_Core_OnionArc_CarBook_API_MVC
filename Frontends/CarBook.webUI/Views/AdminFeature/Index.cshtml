@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Araba Özellikleri Listesi</h4>
                    <p class="card-subtitle mb-4">
                        Arabalarla ilgili Yeni özellik ekleme (Klima,Bluetooth,Audio,Elektrik vs.) özellikler listesi,özellikler üzerinde düzenleme ve bir özelliği kardırma işlemini buradadan yapabilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Özellik</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>


                                @if (Model.Count == 0)
                                {
                                <th scope="row" colspan="4">Özellik Bulunmamaktadır.</th>
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                    <tr>
                                        <th scope="row">@count</th>

                                        <td>@item.FeatureName</td>

                                        <td> <a href="/AdminFeature/RemoveFeature/@item.FeatureId" class="btn btn-outline-danger">Sil</a></td>
                                        <td> <a href="/AdminFeature/UpdateFeature/@item.FeatureId" class="btn btn-outline-success">Güncelle</a></td>

                                    </tr>
                                    }
                                }

                            </tbody>
                        </table>
                        <a href="/AdminFeature/CreateFeature/" class="btn btn-outline-primary">Yeni Özellik Girişi</a>
                    </div>

                </div>
                <!-- end card-body-->
            </div>
            <!-- end card -->

        </div>
        <!-- end col -->


    </div>
    <!-- end page title -->

</div>
